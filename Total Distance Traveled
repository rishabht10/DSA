class Solution {
public:
    int distanceTraveled(int mainTank, int additionalTank) {
        int distance=0;
        
        while(mainTank>=5){
            
            mainTank-=5;
            if(additionalTank>=1){
                 additionalTank--;
            mainTank++;
            }
           
            
            distance+=50;
            
        }
        
        distance+=mainTank*10;
        return distance;
    }
};
